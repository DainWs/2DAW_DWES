<IfModule mod_env.c>
    SetEnv APP_BASE_URL http://localhost/DWES/2Trimestre/Unit-8/project/RequestApp
</IfModule>
<IfModule mod_rewrite.c>
    # Activar mod_rewrite  
    RewriteEngine on

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)\.(jpg|png|jpeg|css|js)$ ./public/$1.$2 [L]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URL} ^.*public/.*$
    RewriteRule ^public/(.*)$ ./index.php?moveTo=$1 [L]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/(.*)(?:\.php|)$ ./index.php?controller=$1&action=$2

</IfModule>